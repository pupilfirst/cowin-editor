<%= render partial: "/layouts/breadcrumbs" %>

<div class="md:flex mt-6 justify-between items-center space-y-4">
  <div class="text-3xl font-bold"><%= @language.name%></div>
  <div class="flex space-x-2">
    <%= link_to "~ Edit Language", edit_language_path(@language), class: "cursor-pointer block px-2 md:px-5 py-2 md:py-3 text-gray-900 font-semibold rounded-md border border-gray-500 shadow hover:text-gray-700 hover:shadow-2xl hover:bg-gray-100 hover:to-gray-300 transition"%>
    <%= link_to "+ Add Category", new_language_category_path(@language), class: "cursor-pointer block px-2 md:px-5 py-2 md:py-3 text-gray-900 font-semibold rounded-md border border-gray-500 shadow hover:text-gray-700 hover:shadow-2xl hover:bg-gray-100 hover:to-gray-300 transition"%>
  </div>
</div>

<div class="mt-4">
  <% @categories.each do |cat| %>
    <%= link_to category_docs_path(cat) do%>
      <div
        class="flex justify-between cursor-pointer mt-4 p-5 border border-gray-500 text-gray-900 font-semibold rounded-md shadow hover:text-gray-700 hover:shadow-2xl hover:bg-gray-100 hover:to-gray-300 transition"
      >
        <div class="text-lg font-semibold">
          <%= cat.title%>
        </div>
        <div>View</div>
      </div>
    <%end%>
  <%end%>
</div>
