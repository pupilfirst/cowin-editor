<% content_for(:head) do %>
  <title>Sign In</title>
<% end %>

<div class="flex min-h-screen">
  <div class="w-full lg:w-3/6 mx-auto flex justify-center items-center">
    <div class="max-w-md w-full mx-auto px-4">
      <div>
        <div class="-mt-10 flex-col justify-between">
          <div>
            <% if ENV['GOOGLE_CLIENT_ID'].present? %>
              <%= button_to user_google_oauth2_omniauth_authorize_path  do%>
                <button
                  class="btn bg-white shadow btn-large w-full hover:shadow-md"
                  type="submit"
                >
                  <%= image_tag 'login/google-icon.svg', class: 'w-4', alt: 'Continue with Google' %>
                  <span class="ml-2">Continue with Google</span>
                </button>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
